  "license": "MIT",
  "dependencies": {
    "chalk": "^5.3.0" // Optional for better console output
  },
  "devDependencies": {
    "eslint": "^8.50.0",
    "mocha": "^10.2.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
